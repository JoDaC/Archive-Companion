<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Archivevn" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_greyish_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="android:editTextBackground">@color/ultra_almost_black</item>
        <item name="android:windowBackground">@color/off_black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="android:textColorPrimary">@color/dark_white_text</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Archivevn.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

<!--    <style name="Theme.Archivevn.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />-->

    <style name="Theme.Archivevn.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />

</resources>