<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Archivevn" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_greyish_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="android:editTextBackground">@color/ultra_almost_black</item>
        <item name="android:windowBackground">@color/off_black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="android:textColorPrimary">@color/dark_white_text</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/ultra_almost_black</item>
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton.Night</item>
        <item name="archiveProgressViewBackground">@color/dark_blue</item>
        <item name="historyBackground">@color/black</item>
        <item name="menuHistoryBackground">@color/ultra_almost_black</item>
        <item name="historyItemTextColor">@color/white</item>
        <item name="historyItemSubTextColor">@color/light_blue</item>
        <item name="historyItemFabColor">@color/dark_greyish_blue</item>
    </style>

    <style name="Widget.App.FloatingActionButton.Night" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/dark_greyish_blue</item>
        <item name="tint">@color/dark_white_text</item>
    </style>

    <style name="Theme.Archivevn.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Archivevn.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />

</resources>