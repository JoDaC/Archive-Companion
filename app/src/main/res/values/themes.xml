<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Archivevn" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/very_light_blue</item>
        <item name="colorPrimaryVariant">@color/very_light_blue</item>
        <item name="android:editTextBackground">@color/very_light_blue</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="android:textColorPrimary">@color/light_black_text</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton.Day</item>
        <item name="archiveProgressViewBackground">@color/light_blue</item>
        <item name="historyBackground">@color/white</item>
        <item name="actionBarTheme">@color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="menuHistoryBackground">@color/very_light_blue</item>
        <item name="historyItemTextColor">@color/black</item>
        <item name="historyItemSubTextColor">@color/design_default_color_error</item>
        <item name="historyItemFabColor">@color/intro_grey</item>
    </style>

    <style name="Widget.App.FloatingActionButton.Day" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/very_light_blue</item>
        <item name="tint">@color/light_black_text</item>
    </style>

    <style name="Theme.Archivevn.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Archivevn.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>